---
import { useTranslations, type Lang } from "@/i18n";
const t = useTranslations(Astro.currentLocale as Lang);

const JsonData = `
{
    "title": {
        "en": "Why Choose TierList.Online?"
    },
    "subtitle": {
        "en": "The most powerful and user-friendly tier list maker on the web"
    },
    "features": {
        "en": [
            {
                "title": "No Registration Required",
                "description": "Start creating tier lists instantly without signing up. Save time and get right to ranking your favorites.",
                "icon": "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
            },
            {
                "title": "Customizable Templates",
                "description": "Choose from hundreds of pre-made templates or create your own custom tier list from scratch.",
                "icon": "M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
            },
            {
                "title": "Instant Sharing",
                "description": "Share your tier lists with friends on social media or download them as high-quality images.",
                "icon": "M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m9.032 4.026a9.001 9.001 0 01-7.432 0m9.032-4.026A9.001 9.001 0 0112 3c-4.474 0-8.268 3.12-9.032 7.326m0 0A9.001 9.001 0 0012 21c4.474 0 8.268-3.12 9.032-7.326"
            },
            {
                "title": "Mobile-Friendly",
                "description": "Create and edit tier lists on any device. Our responsive design works perfectly on phones and tablets.",
                "icon": "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
            },
            {
                "title": "Unlimited Tier Lists",
                "description": "Create as many tier lists as you want. There's no limit to your creativity and ranking possibilities.",
                "icon": "M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"
            },
            {
                "title": "High-Quality Export",
                "description": "Download your tier lists in high resolution. Perfect for sharing on social media or printing.",
                "icon": "M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
            }
        ]
    }
}
`;

const data = JSON.parse(JsonData);
---

<section class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
                {t(data.title)}
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
                {t(data.subtitle)}
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {data.features.en.map((feature: any) => (
                <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <div class="w-12 h-12 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center mb-6">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                        {t(feature.title)}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-400">
                        {t(feature.description)}
                    </p>
                </div>
            ))}
        </div>
    </div>
</section>